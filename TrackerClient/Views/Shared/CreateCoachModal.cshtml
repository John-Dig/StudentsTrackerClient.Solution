@model TrackerClient.Models.Coach

<div id="create-coach-modal" class="modal create-modal obscured hidden">
  <div class="modal-message">New Coach</div>
  @using (Html.BeginForm("Create", "Coaches"))
  {
    <div class="form-row">
      @Html.LabelFor(model => model.FirstN, "First Name")
      @Html.TextBoxFor(model => model.FirstN)
    </div>
    <div class="form-row">
      @Html.LabelFor(model => model.LastN, "Last Name")
      @Html.TextBoxFor(model => model.LastN)
    </div>
    <div class="form-row">
      @Html.LabelFor(model => model.Email)
      @Html.TextBoxFor(model => model.Email)
    </div>
    <div class="form-row">
      @Html.LabelFor(model => model.Phone, "Phone Number")
      @Html.TextBoxFor(model => model.Phone)
    </div>
    <div class="form-row">
      @Html.LabelFor(model => model.BeltId, "Belt ID")
      @Html.TextBoxFor(model => model.BeltId, new { @type="number", @value=1 })
    </div>
    <button class="green" type="submit">Add coach</button>
  }

  <div class="button-area">
    <button onclick="hideModal('create-coach-modal')">Cancel</button>
  </div>
</div>