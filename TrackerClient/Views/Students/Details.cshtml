@{
  Layout = "_Layout";
}

@model TrackerClient.Models.Student

<h2>Details for Student @Model.FirstN @Model.LastN</h2>


<div class="button-area">
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  @if (User.Identity.IsAuthenticated) {
    <a href='@Url.Action("Edit", "Students", new { id = @Model.StudentId })'>
      <button class="yellow">Edit</button>
    </a>
    <a href='@Url.Action("Delete", "Students", new { id = @Model.StudentId })'>
      <button class="red">Delete</button>
    </a>
  }
</div>